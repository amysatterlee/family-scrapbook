<%= form_for @photo, :html => { :class => "form-horizontal photo" } do |f| %>

  <% if @photo.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@photo.errors.count, "error") %> prohibited this photo from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @photo.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :image, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :caption, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :caption, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit 'Upload Photo', :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                photos_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
